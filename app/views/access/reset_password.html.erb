<div class="formpic">

  <%= render 'layouts/header' %>
<div class="row">
  <div class="col-md-6 col-sm-6 col-md-offset-3 col-sm-offset-3">
    
  <%= form_tag(update_password_path, :method=>'post') do %>

    <p class="center">
      <%= text_field_tag(:username, @user.username, readonly: true) %>
    </p>
      
    <p class="center">
   <%= label_tag(:password, "New Password") %> 
   <%= password_field_tag :password %>
   </p>

   <p class="center">
      <%= label_tag(:password_confirmation, "Confirmation") %> 
      <%= password_field_tag :password_confirmation %>
   </p>

    <p class="center-button">
     <%= submit_tag 'Reset Password', class: "btn-clear" %>
    </p>
  <% end %>

  </div>
</div>
</div>